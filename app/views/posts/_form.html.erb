<%= javascript_include_tag :ckeditor %>
<script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>
<script type="text/javascript">bkLib.onDomLoaded(nicEditors.allTextAreas);</script>
<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count%> fejl gjorde at l√∏bet ikke kunne oprettes:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :loeb_id, :value => @loeb_id %>
    <%= f.hidden_field :post_type, :value => @type %>
  </div>
  <div class="field">
    <%= f.label :post_navn %><br />
    <%= f.text_field  :name %>
  </div>
  <div class="field">
    <%= f.label :post_beskrivelsen %><br />
	<%= f.text_area :description %>
  </div>
<% if @type != "human" %>
  <div class="field">
    <%= f.label :det_rigtige_svar %><br />
    <%= f.text_field :rigtig_svar_ans %>
  </div>
  <div class="field">
    <%= f.label :tekst_ved_rigtig_svar %><br />
	<%= f.text_area :rigtig_svar %>
  </div>
  <div class="field">
    <%= f.label :tekst_ved_forkert_svar %><br />
	<%= f.text_area :forkert_svar %>
  </div>
  <div class="field">
    <%= f.label :proev_igen_ved_forkert_svar %><br />
    <%= f.check_box :try_again %>
  </div>
<% end %>
  <div class="field">
    <%= f.label :Placering %><br />
    <%= f.text_field :placement %>
  </div>
  <div class="actions">
    <%= f.submit 'Gem' %>
  </div>
<% end %>
