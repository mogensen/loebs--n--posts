<%= form_for(@team) do |f| %>
  <% if @team.errors.any? %>
    <div id="error_explanation" class="error floatLeft">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% @team.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
	<div style="clear: left; height: 1em;"></div>
  <% end %>

  <div class="field">
    <%= f.label :navn %>
