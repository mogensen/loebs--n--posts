    <%= f.label :kontakt %>
    <%= f.text_field :contact %>
  </div>
  <div class="field">
    <%= f.label :kode %>
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :Deltagere %>
    <%= f.text_area :team_members, :rows => 6 %>
  </div>
  <div class="actions">
    <%= f.submit 'Gem' %>
  </div>
<% end %>
